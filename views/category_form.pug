extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') Nome:
      input#name.form-control(type='text' placeholder='Nome' name='name' required='true' value=(undefined===category ? '' : category.name) maxLength=30)
    button.btn.btn-primary(type='submit') Enviar
  if errors
    ul
      for error in errors
        li!= error.msg